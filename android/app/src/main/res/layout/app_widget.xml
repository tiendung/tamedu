<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:theme="@style/ThemeOverlay.Android.AppWidgetContainer">

    <ImageView
        android:id="@+id/appwidget_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|top"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_quote_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lời dạy mới" />

        <Button
            android:id="@+id/speak_quote_toggle_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc to" />

        <Button
            android:id="@+id/nghe_phap_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nghe pháp" />
    </LinearLayout>

</RelativeLayout>